<h1>New salesforce</h1>

<div>
  <%= submit_tag 'Create' %>
</div><br/>

<div class="title">
  <%= label_tag 'Lead information' %>
</div>

<div class="lead_information" align="center">
  <div class="left_info">

    <div class="column">
