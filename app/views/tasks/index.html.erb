<h1>Listing tasks</h1>

<%= link_to 'New task', new_task_path %>
<%= link_to 'New category', new_category_path %>

<p>Category<br/>
  <%= select_tag "Categories", "<option value='all'> all </option>" + options_from_collection_for_select(@categories, "id", "category_name", params[:category_id].to_i),:onchange=> "change_category(this)", :autocomplete => "off"%></p>

<br/><br/>
<div>
  <div class="tasks pinter">
    <div class="check">Checked</div>
    <div class="info" onclick=<%= look_on_click("title") %>>Title</div>
    <div class="info" onclick=<%= look_on_click("description") %>>Description</div>
    <div class="status" onclick=<%= look_on_click("status") %>>Status</div>
    <div class="actions_title">Actions</div>
    <div style="clear:both;"></div>

  </div>

  <%= render :partial => "tasks", :locals => {:tasks => @tasks_started, :status => "new"} %>
  ____________________________________________________________________________________________________________
  <%= render :partial => "tasks", :locals => {:tasks => @tasks_finished, :status => "finished"} %>


</div>
<br/>

<script type="text/javascript">
  function change_category(select) {
      window.location = '/tasks?category_id='+select.value
  }
</script>