<div class="tasks pinter">
    <div class="check">Checked</div>
    <div class="info" onclick=<%= look_on_click("title") %>>Title</div>
    <div class="info" onclick=<%= look_on_click("description") %>>Description</div>
    <div class="status" onclick=<%= look_on_click("status") %>>Status</div>
    <div class="actions_title">Actions</div>
    <div style="clear:both;"></div>
</div>

<div id="cont_<%= status %>">
  <% tasks.each do |task| %>
      <div id="tr_<%= task.id %>" class="tasks">
        <div class="task_container">
          <div class="check">
            <%= checked task %>
            &nbsp;
          </div>
          <div class=<%= through_name task.status %>>
            <div class="info"><%= task.title %></div>
            <div class="info"><%= task.description %></div>
            <div class="status" id="st_<%= task.id %>"> <%= task.status %></div>
          </div>
          <div class="actions hidden">
            <div><%= link_to image_tag("show.png", :size => "15x15",:border => "0"), task %></div>
            <div><%= link_to image_tag("edit.png", :size => "15x15",:border => "0"), edit_task_path(task) %></div>
            <div><%= destroy_link task.id %></div>
          </div>
          <div style="clear:both;"></div>
        </div>
      </div>

  <% end %>
</div>